<div class = "card">
    <div class ="card-header">
        <h2>Update Post</h2>
    </div>
    <form id="edit-form" class="card-body">
        <input type="hidden" id="post-id" value="{{post.id}}"/>

          <label class="form-label" for="post-title">Title</label>
    <input type="text" id="post-title" value="{{post.title}}" class="form-input" />

    <label class="form-label" for="post-content">Body</label>
    <textarea id="post-body" class="form-input">{{post.contents}}</textarea>

    <button type="submit" id="update-btn" class="btn">Update</button>

    <button type="button" id="delete-btn" class="btn">Delete</button>
    </form>
</div>

<script src="/js/edit.js"></script>